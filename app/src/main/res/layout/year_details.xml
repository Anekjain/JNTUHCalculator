<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1E3DF"
    android:orientation="vertical">

    <TextView

        android:id="@+id/tv_Cse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:padding="5dp"
        android:text="CSE (Year)"
        android:textColor="#000000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_normal"
        android:text="1"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_2_1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_normal"
        android:text="2-1"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_2_2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_normal"
        android:text="2-2"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_3_1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_normal"
        android:text="3-1"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_3_2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_normal"
        android:text="3-2"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_4_1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_normal"
        android:text="4-1"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_4_2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_normal"
        android:text="4-2"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
    android:id="@+id/btn_Close"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_marginStart="100dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/button_normal_2"
    android:text="Close"
    android:textColor="#000000"
    android:textSize="25sp"
    android:textStyle="bold" />





</LinearLayout>