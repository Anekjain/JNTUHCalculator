<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#C1E3DF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Subject22"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:text="SUBJECTS"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_CO"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:text="@string/CO"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_DBMS"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:text="@string/DBMS"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_Java"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:text="@string/Java"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ES"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="2"
                android:text="@string/ES"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_FLAT"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_weight="2"
                android:text="@string/FLAT"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_DAA"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_weight="2"
                android:text="@string/DAA"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_Java_Lab"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_weight="2"
                android:text="@string/Java_Lab"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_DBMS_Lab"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:text="@string/DBMS_Lab"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        //INTERNAL LAYOUT

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Internal22"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="INTERNAL"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />



            <EditText
                android:id="@+id/et_Int_CO"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="25"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_Int_DBMS"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="25"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_Int_Java"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="25"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_Int_ES"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="25"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_Int_FLAT"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="25"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_Int_DAA"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="25"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="#000000"
                android:textSize="30sp" />


            <EditText
                android:id="@+id/et_Int_JavaLab"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="25"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_Int_DBMSLab"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="25"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="#000000"
                android:textSize="30sp" />


        </LinearLayout>

        //EXTERNAL LAYOUT

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_External22"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="EXTERNAL"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />



            <EditText
                android:id="@+id/et_Ext_CO"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="75"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_Ext_DBMS"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="75"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_Ext_Java"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="75"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_Ext_ES"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="75"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_Ext_FLAT"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="75"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_Ext_DAA"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="75"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_Ext_JavaLab"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="75"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_Ext_DBMSLab"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:hint="75"
                android:inputType="numberSigned"
                android:maxLength="2"
                android:textColor="#000000"
                android:textSize="30sp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_Ok22"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_normal"
            android:text="Calculate"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Cal22"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_normal"
            android:text="Result"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>